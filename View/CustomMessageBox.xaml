<Window x:Class="HotelManagement.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F4F4F4" BorderThickness="1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message Content -->
        <TextBlock x:Name="MessageText"
                   FontSize="16"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" />

        <!-- OK Button -->
        <Button Content="OK"
                Width="80"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#3498DB"
                Foreground="White"
                Click="OkButton_Click"
                Margin="0,10,0,0" />
    </Grid>
</Window>
