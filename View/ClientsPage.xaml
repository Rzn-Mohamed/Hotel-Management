<Page x:Class="HotelManagement.Views.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Clients">
    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Clients Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Add Client Section -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Add Client" Width="100" Height="30" Background="#27AE60" Foreground="White" Margin="0,0,10,0" />
                <Button Content="Delete Client" Width="100" Height="30" Background="#E74C3C" Foreground="White"/>
            </StackPanel>

            <!-- Clients List -->
            <DataGrid x:Name="ClientsDataGrid" AutoGenerateColumns="True" Height="300" Width="500" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
