<Page x:Class="HotelManagement.Views.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Rooms">
    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Rooms Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Add Room Section -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Add Room" Width="100" Height="30" Background="#3498DB" Foreground="White" Margin="0,0,10,0" />
                <Button Content="Delete Room" Width="100" Height="30" Background="#E74C3C" Foreground="White"/>
            </StackPanel>

            <!-- Rooms List -->
            <DataGrid x:Name="RoomsDataGrid" AutoGenerateColumns="True" Height="300" Width="500" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
