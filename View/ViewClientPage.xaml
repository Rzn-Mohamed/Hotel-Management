<Page x:Class="HotelManagement.Views.ViewClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="View Client">

    <Grid Background="#F5F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" Grid.Row="0" Padding="20" Margin="0,0,0,20">
            <TextBlock Text="Client Details" FontSize="26" FontWeight="SemiBold" 
                      Foreground="#2C3E50"/>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Name}" Margin="0,0,0,10"/>
            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Email}" Margin="0,0,0,10"/>
            <TextBlock Text="Gender:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Gender}" Margin="0,0,0,10"/>
            <TextBlock Text="Address:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Address}" Margin="0,0,0,10"/>
            <TextBlock Text="BirthDate:" FontWeight="Bold"/>
            <TextBlock Text="{Binding BirthDate, StringFormat=MM/dd/yyyy}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
