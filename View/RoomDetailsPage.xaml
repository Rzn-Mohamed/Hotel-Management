<Page x:Class="Hotel_Management.Views.RoomDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Room Details" Height="665" Width="753">
    <Grid Background="#F4F6F6" Margin="20">
        <StackPanel>
            <TextBlock Text="Room Details" FontSize="24" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,20"/>

            <!-- Room Picture -->
            <Image x:Name="RoomImage" Height="200" Width="300" Margin="0,0,0,20" Stretch="Uniform" />

            <TextBlock Text="Room Number:" FontSize="16" FontWeight="SemiBold" />
            <TextBlock x:Name="RoomNumberTextBlock" FontSize="16" Margin="0,0,0,10" />

            <TextBlock Text="Price:" FontSize="16" FontWeight="SemiBold" />
            <TextBlock x:Name="PriceTextBlock" FontSize="16" Margin="0,0,0,10" />

            <TextBlock Text="Type:" FontSize="16" FontWeight="SemiBold" />
            <TextBlock x:Name="TypeTextBlock" FontSize="16" Margin="0,0,0,10" />

            <TextBlock Text="Status:" FontSize="16" FontWeight="SemiBold" />
            <TextBlock x:Name="StatusTextBlock" FontSize="16" Margin="0,0,0,10" />

            <Button Content="Back" Width="100" Height="40" 
                    HorizontalAlignment="Left" 
                    Click="BackButton_Click" 
                    Background="#2ECC71" Foreground="White" FontSize="14" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
